<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HosipitalManager.MVVM.Views.PrescriptionsContentView"
             x:Name="Root">
    
    <Grid RowDefinitions ="Auto, *">
        <!-- Thanh nút thêm đơn thuốc -->
        <HorizontalStackLayout Grid.Row="0" Margin="0, 0, 0, 15">
            <Button Text="+ Thêm Đơn thuốc"
                Command="{Binding ShowAddPrescriptionPopupCommand}"
                BackgroundColor="{StaticResource ColorPrimary}"
                TextColor="White"
                CornerRadius="8"
                Padding="15, 10" />
        </HorizontalStackLayout>

        <!-- Khung danh sách đơn thuốc -->
        <Frame Grid.Row="1"
           Padding="0"
           CornerRadius="12"
           BackgroundColor="White"
           BorderColor="#E0E0E0"
           HasShadow="True"
           VerticalOptions="FillAndExpand">

            <CollectionView ItemsSource="{Binding Prescriptions}">
                <!-- Header -->
                <CollectionView.Header>
                    <Grid Padding="15, 10" BackgroundColor="#F9FAFB" ColumnDefinitions="1*, 1.5*, 1.5*, 1.5*, 1*, 1*">
                        <Label Grid.Column="0" Text="MÃ ĐƠN" FontAttributes="Bold" TextColor="#6B7280" />
                        <Label Grid.Column="1" Text="BỆNH NHÂN" FontAttributes="Bold" TextColor="#6B7280" />
                        <Label Grid.Column="2" Text="BÁC SĨ KÊ" FontAttributes="Bold" TextColor="#6B7280" />
                        <Label Grid.Column="3" Text="NGÀY KÊ" FontAttributes="Bold" TextColor="#6B7280" />
                        <Label Grid.Column="4" Text="TRẠNG THÁI" FontAttributes="Bold" TextColor="#6B7280" />
                        <Label Grid.Column="5" Text="HÀNH ĐỘNG" FontAttributes="Bold" TextColor="#6B7280" />
                    </Grid>
                </CollectionView.Header>

                <!-- Item -->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="15, 10" ColumnDefinitions="1*, 1.5*, 1.5*, 1.5*, 1*, 1*">
                            <!-- Đường viền trên mỗi hàng -->
                            <Border Grid.ColumnSpan="6"
                                    Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    VerticalOptions="Start"
                                    Margin="-15, -10, -15, 0"/>

                            <Label Grid.Column="0"
                                   TextColor="#6B7280"
                                   Text="{Binding Id}"
                                   VerticalOptions="Center" />
                            <Label Grid.Column="1"
                                   TextColor="#6B7280"
                                   Text="{Binding PatientName}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                            <Label Grid.Column="2"
                                   TextColor="#6B7280"
                                   Text="{Binding DoctorName}"
                                   VerticalOptions="Center" />
                            <Label Grid.Column="3"
                                   TextColor="#6B7280"
                                   Text="{Binding DatePrescribed, StringFormat='{0:dd/MM/yyyy}'}"
                                   VerticalOptions="Center" />
                            <Label Grid.Column="4"
                                   TextColor="#6B7280"
                                   Text="{Binding Status}"
                                   VerticalOptions="Center" />

                            <!-- Hành động -->
                            <HorizontalStackLayout Grid.Column="5"
                                                   Spacing="10"
                                                   VerticalOptions="Center">

                                <!-- Sửa -->
                                <ImageButton Source="edit.png"
                                             WidthRequest="18"
                                             HeightRequest="18"
                                             Command="{Binding Source={x:Reference Root}, Path=BindingContext.ShowPrescriptionDetailCommand}"
                                             CommandParameter="{Binding}"/>

                                <!-- Xóa -->
                                <ImageButton Source="delete.png" 
                                             WidthRequest="18" 
                                             HeightRequest="18" />
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

     
    </Grid>
</ContentView>
